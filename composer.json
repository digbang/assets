{
    "name": "digbang/assets",
    "description": "Asset versioning for Laravel projects.",
    "require": {
        "illuminate/support": "~4.2",
        "illuminate/filesystem": "~4.2",
        "illuminate/config": "~4.2",
        "illuminate/routing": "~4.2"
    },
    "require-dev": {
        "graham-campbell/flysystem":  "~1.0",
        "illuminate/console": "~4.2"
    },
    "suggest": {
        "graham-campbell/flysystem":  "Use Flysystem to copy the source asset to a remote location (e.g. AWS s3)"
    },
    "autoload": {
        "psr-4": {
            "Digbang\\Assets\\": "src/"
        },
        "files": ["src/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Digbang\\Assets\\Tests": "tests/"
        }
    }
}
